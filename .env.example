# ========================================
# Database Configuration
# ========================================

# Option 1: Use full DATABASE_URL (recommended for production)
# For Supabase PostgreSQL, get this from: Project Settings > Database > Connection String (URI)
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Option 2: Use individual components (alternative)
DB_TYPE=sqlite  # Options: sqlite, postgresql
# For PostgreSQL/Supabase:
# DB_TYPE=postgresql
# DB_HOST=db.[PROJECT-REF].supabase.co
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your-supabase-password
# DB_NAME=postgres

# For local SQLite (development):
DATABASE_URL=sqlite:///./vendly.db

# ========================================
# JWT Configuration
# ========================================
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=15

# ========================================
# AWS S3 Configuration (for product image uploads)
# ========================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name
S3_PRODUCT_IMAGES_FOLDER=product-images

# ========================================
# Application Settings
# ========================================
APP_NAME=Vendly API
APP_VERSION=1.0.0
DEBUG=False

# ========================================
# CORS Settings (comma-separated origins)
# ========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
